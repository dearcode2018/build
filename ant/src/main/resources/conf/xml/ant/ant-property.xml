<?xml version="1.0" encoding="UTF-8"?>
<project name="prjNname" default="targetName" basedir=".">
	<!-- 平台环境变量 -->
    <property environment="env" />
	<!-- 项目根路径 (仅针对当前目录有效) -->
	<!-- 项目根路径 (为了更好地表示项目的根路径，一般将 build.xml 放在项目的根目录下) -->
	<property name="project.root" value="${basedir}../../../../" />
	
	<!-- 引入外部属性文件 -->
	<property file="${project.root}/conf/properties/ant.properties"></property>
	
	<!-- 声明内部属性 -->
	<property name="fruit" value="Apple" />
	
	<!-- 输出项目根路径 -->
	<echo message="项目根路径 : ${project.root}"></echo>
	
	<echo message="${basedir}"></echo>
	
	<!-- 输出属性 -->
	<echo message="${test.ant.count}"></echo>
	<echo message="${fruit}"></echo>

	<property name="build.dir" location="build222"/>
	<echo message="${build.dir}"></echo>
	
	
	<!-- target item -->
	<target name="targetName">
		<description> target description</description>
		<echo message="${basedir}" />
	</target>
	
	
</project>