<?xml version="1.0" encoding="UTF-8"?>
<project name="copy" default="copy" basedir=".">
	<!--  -->
	<!-- 拷贝文件/目录 -->
	<target name="copy">
		<description>拷贝文件/目录</description>
		<copy todir="${basedir}/copy">
			<fileset dir="${basedir}/copy" id="id">
				<!-- 包含哪些文件 -->
			    <include name="ant-j*"/>
				<!-- 排除哪些文件 -->
			    <exclude name=""/>
			</fileset>
		</copy>
	</target>
	
	<!-- 拷贝单个文件 -->
	<target name="copySingleFile">
		<description>拷贝单个文件</description>
		<copy file="ant-copy.xml" tofile="copySingleFile.xml"/>
	</target>
	
	<!-- 拷贝文件 (已过时，使用 copy 替代) -->
	<target name="copyFile">
		<description>拷贝文件</description>
		<copyfile dest="${basedir}/copy" src="${basedir}"/>
	</target>
	
	<!-- 拷贝目录 (已过时，使用 copy 替代) -->
	<target name="copyDirectory">
		<description>拷贝目录</description>
		<copydir dest="${basedir}/copy" src="${basedir}">
			<include/>
			<exclude/>
		</copydir>
	</target>

	
</project>