<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<!-- 属性列表，用于替代 或 资源过滤 -->
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.version>3.2.5</maven.version>
		<common.version>0.0.1</common.version>
	</properties>
	
	<!-- 父项目，父项目中指定的值就是此项目中未指定的值的默认值 -->
	<parent>
		<groupId></groupId>
		<artifactId></artifactId>
		<version></version>
		<!-- 默认是 ../pom.xml -->
		<relativePath></relativePath>
	</parent>

	<!-- 声明此pom项目描述符所遵循的版本 -->
	<modelVersion>4.0.0</modelVersion>
	
	<!-- 全局唯一的项目标识符，通常使用完全限定的包名来和其他项目区隔(例如 org.apache.maven) -->
	<groupId>com.hua</groupId>
	<!-- 在给定groupId内唯一的产品标识符，artifact就是由此项目产生的，或者由项目所使用的东西。
		例如 由maven项目产生的artifacts包括: jars / source / 二进制分发包和wars
	 -->
	<artifactId>maven</artifactId>
	<!-- 此项目产生的artifact的类型，例如 jar / war / ear / pom。插件能够构建它们自己的packaging -->	
	<packaging>jar</packaging>
	<!-- 项目的名称 -->
	<name>maven</name>
	<!-- 此项目产生的artifact当前版本 -->
	<version>0.0.1</version>
	<!-- 项目描述，被maven用来需要的地方描述该项目，例如 web站点，此元素可以使用CDATA 让内容可以包含html标签 -->
	<description>project description</description>
	<!-- 该项目的主页 home page -->
	<url>http://www.baidu.com</url>
	
	<!-- 项目先决条件 -->
	<prerequisites>
		<!-- 构建此项目所需的maven最低版本 -->
		<maven>${maven.version}</maven>
	</prerequisites>
	
	<!-- bug 跟踪 用于管理此项目的发布跟踪 -->
	<issueManagement>
		<!-- 构建此项目所需的maven最低版本 -->
		<system>${maven.version}</system>
		<!-- 此项目使用的发布管理系统 -->
		<url></url>
	</issueManagement>
	
	<!-- 持续集成系统 -->
	<ciManagement>
		<!-- 系统名称 -->
		<system></system>
		<!-- 持续集成系统的url -->
		<url></url>
		<!-- 配置用户信息和通知模式，当构建成功通知开发人员/用户 -->
		<notifiers>
			<!-- 通知者 -->
			<notifier>
				<!-- 投递通知的机制 -->
				<type></type>
				<!-- Deprecated 发送通知的地址，通常为 email 地址 -->
				<address></address>
				<!-- 附加配置信息 -->
				<configuration>
					<project></project>
				</configuration>
				<!-- 是否发送警告通知 -->
				<sendOnWarning>true</sendOnWarning>
				<!-- 是否发送错误通知 -->
				<sendOnError>true</sendOnError>
				<!-- 是否发送失败通知 -->
				<sendOnFailure>true</sendOnFailure>
				<!-- 是否发送成功通知 -->
				<sendOnSuccess>false</sendOnSuccess>
			</notifier>
		</notifiers>
	</ciManagement>
	
	<!-- 项目的开始年份，产生版权信息时指定 -->
	<inceptionYear>2015</inceptionYear>
	
	<!-- 邮件列表，自动产生的站点将引用此信息 -->
	<mailingLists>
		<mailingList>
			<!-- 邮件列表名称 -->
			<name></name>
			<!-- 订阅此邮件列表的email地址或链接，若是email地址，产生文档时会自动生成 mailto:链接 -->
			<subscribe></subscribe>
			<!-- 退订此邮件列表的eamil地址或链接，若是email地址，产生文档时会自动生成 mailto:链接 -->
			<unsubscribe></unsubscribe>
			<!-- 可以投递到此邮件列表的eamil地址或链接，若是email地址，产生文档时会自动生成 mailto:链接 -->
			<post></post>
			<!-- 可以浏览到邮件列表存档信息的url -->
			<archive></archive>
			<!-- 可选的替代url，用于浏览邮件存档信息列表 -->
			<otherArchives>
				<otherArchive></otherArchive>
			</otherArchives>
		</mailingList>
	</mailingLists>
	
	<!-- 开发小组 -->
	<developers>
		<!-- 开发者信息 -->
		<developer>
			<id></id>
			<name></name>
			<email></email>
			<url></url>
			<roles></roles>
			<properties></properties>
			<timezone></timezone>
			<organization></organization>
			<organizationUrl></organizationUrl>
		</developer>
	</developers>
	
	<!-- 项目的贡献者，但不属于项目开发者 -->
	<contributors>
		<!-- 项目的贡献者信息 -->
		<contributor>
			<id></id>
			<name></name>
			<email></email>
			<url></url>
			<roles></roles>
			<properties></properties>
			<timezone></timezone>
			<organization></organization>
			<organizationUrl></organizationUrl>			
		</contributor>
	</contributors>
	
	<!-- 项目许可，对本项目的许可，而不是对本项目的依赖的许可 -->
	<licenses>
		<license>
			<name></name>
			<url></url>
			<distribution></distribution>
			<comments></comments>
		</license>
	</licenses>
	
	<!-- 源代码控制系统，例如 cvs / svn... -->
	<scm>
		<tag></tag>
		<url></url>
		<connection></connection>
		<developerConnection></developerConnection>
	</scm>
	
	<!-- 此项目所属机构信息 -->
	<organization>
		<name></name>	
		<url></url>
	</organization>
	
	<!-- 项目构建 -->
	<build>
		
	</build>
	
	<!-- 项目本地构建文件列表，如果使用，则改变默认的构建过程 -->
	<profiles>
		<profile>
			<activation></activation>
		</profile>
	</profiles>
	
	<!-- 本项目的模块(子项目) -->
	<modules>
		
	</modules>
	
	<!-- 查找发现依赖项和扩展项的远程仓库 -->
	<repositories>
		<!-- 远程仓库 -->
		<repository>
			<id></id>
			<name></name>
			<layout>default</layout>
			<releases><enabled>true</enabled></releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<url></url>
		</repository>
	</repositories>
	
	<!-- 查找发现构建和报表所需插件的远程仓库 -->
	<pluginRepositories>
		<pluginRepository>
			<id></id>
			<name></name>
			<layout>default</layout>
			<releases><enabled>true</enabled></releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<url></url>			
		</pluginRepository>
	</pluginRepositories>
	
	<!-- 项目的分发信息 -->
	<distributionManagement>
		<downloadUrl></downloadUrl>
		<relocation></relocation>
		<repository></repository>
		<site></site>
		<snapshotRepository></snapshotRepository>
		<status></status>
	</distributionManagement>
	
	<dependencies>
		<dependency>
			<groupId>com.hua</groupId>
			<artifactId>common</artifactId>
			<version>${common.version}</version>
		</dependency>
		
	</dependencies>

</project>
